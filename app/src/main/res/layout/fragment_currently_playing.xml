<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jukespot.spotifyjukespot.CurrentlyPlaying.CurrentlyPlayingFragment">

    <!-- TODO: Update to make it look nicer maybe add image -->
    <TextView
        android:id="@+id/testTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Currently Playing Test Layout"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/txtSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testTag"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="SONG TITLE"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/txtSongArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSongTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="artist name"/>

    <Button
        android:id="@+id/btnPlaySong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSongTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="Play" />

    <Button
        android:id="@+id/btnPauseSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPlaySong"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:text="Pause" />



    <Button
        android:id="@+id/btnNextSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPauseSong"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:text="Next" />

    <Button
        android:id="@+id/btnPrevSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNextSong"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="230dp"
        android:text="Prev" />

</FrameLayout>
