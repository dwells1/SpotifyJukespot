<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jukespot.spotifyjukespot.JukeboxUserOptions">

    <TextView
        android:id="@+id/edSpotTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="SPOTIFY JUKEBOX"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/bStartJukebox"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:onClick="onStartNewJukeboxClicked"
        android:text="Start Jukebox"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_marginTop="173dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="@color/dividerColor"
        android:visibility="visible"
        android:layout_below="@+id/bStartJukebox"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />

    <Button
        android:id="@+id/bJoinJukebox"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="143dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/bStartJukebox"
        android:layout_below="@+id/view"
        android:onClick="onJoinJukeboxClicked"
        android:text="Join Jukebox" />




</RelativeLayout>
